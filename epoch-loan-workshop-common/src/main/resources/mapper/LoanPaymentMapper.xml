<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epoch.loan.workshop.common.dao.LoanPaymentDao">

    <select id="getById" resultType="com.epoch.loan.workshop.common.entity.LoanPaymentEntity">
        SELECT * FROM loan_payment WHERE id = #{id}
    </select>

    <select id="selectAll" resultType="com.epoch.loan.workshop.common.entity.LoanPaymentEntity">
        SELECT * FROM loan_payment where status = 1
    </select>
</mapper>